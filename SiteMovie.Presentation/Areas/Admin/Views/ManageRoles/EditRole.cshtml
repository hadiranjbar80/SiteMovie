@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "ویرایش نقش";
}

<h4>ویرایش نقش</h4>
<hr />
<form asp-controller="ManageRoles" asp-action="EditRole" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-6">
        <label class="control-label">عنوان نقش :</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <button class="btn btn-warning" type="submit">ویرایش</button>
</form>

<div>
    <a asp-action="Index">بازگشت</a>
</div>