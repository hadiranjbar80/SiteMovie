@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "افزودن نقش";
}

<h4>افزودن نقش</h4>
<hr />
<form asp-controller="ManageRoles" asp-action="AddRole" method="post">
