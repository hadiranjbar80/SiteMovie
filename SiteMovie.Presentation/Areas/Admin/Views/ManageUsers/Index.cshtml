@model List<SiteMovie.Domain.ViewModels.UsersIndexViewModel>
@{
    ViewData["Title"] = "Index";
}


@if (!Model.Any())
{
    <div class="alert alert-warning">کاربری یافت نشد</div>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div class="card mt-2">
            <div class="card-header">
                نام کاربری : <b>@Model[i].UserName</b>
            </div>
            <div class="card-body">
                ایمیل : <b>@Model[i].Email</b>
            </div>
            <div class="card-footer">
                <form asp-controller="ManageUsers" asp-action="DeleteUser" asp-route-id="@Model[i].UserId" method="post">

                    <a asp-controller="ManageUsers" asp-action="AddUserToRole" asp-route-id="@Model[i].UserId"
                       class="btn btn-primary">افزودن فقش به کاربر</a>
                    <a asp-controller="ManageUsers" asp-action="RemoveUserFromRole" asp-route-id="@Model[i].UserId"
                       class="btn btn-danger">حذف نقش کاربر</a>
                    <button type="submit" class="btn btn-danger">حذف کاربر</button>
                </form>
            </div>
        </div>
    }
}

