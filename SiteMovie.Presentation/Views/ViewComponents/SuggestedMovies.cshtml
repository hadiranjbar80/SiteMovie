@using SiteMovie.Domain.ViewModels
@model List<SuggestedMoviesViewModel>

<h3 style="padding-top:2em">برای شما پیشنهاد شده است</h3>
<div class="owl-carousel owl-theme loop">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="card" style="margin-top: 4.5rem; padding-bottom: .5rem">
            <img class="card-img-top" src="/Images/Movies/@Model[i].MovieImage" alt="">
            <div class="card-body">
                <h5 class="card-title" style="color:black;">@Model[i].MovieTitle</h5>
                <a href="/ShowMovie/@Model[i].MovieId" class="btn btn-primary">جزئیات</a>
            </div>
        </div>
    }
</div>